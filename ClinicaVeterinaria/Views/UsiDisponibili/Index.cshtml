@model IEnumerable<ClinicaVeterinaria.Models.UsiDisponibili>

@{
    ViewBag.Title = "Index";
}

<h2>Lista usi disponibili</h2>

<p>
    @Html.ActionLink("Crea nuovo uso", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Descrizione)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Descrizione)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.IdUsi }) |
            @Html.ActionLink("Details", "Details", new { id=item.IdUsi }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.IdUsi })
        </td>
    </tr>
}

</table>
