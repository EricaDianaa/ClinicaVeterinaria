@model ClinicaVeterinaria.Models.Vendite

@{
    ViewBag.Title = "Create";
}

<div class="row row-cols-3">
    <div class="col">
        @using (Html.BeginForm("Create", "Vendite", FormMethod.Post, new { id = "FormVendite" }))
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">
                <h4>Dati vendita</h4>
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group">
                    <label class="control-label col-md-2">Cod.fiscale</label>
                    @*@Html.LabelFor(model => model.IdUtente, "IdUtente", htmlAttributes: new { @class = "control-label col-md-2" })*@
                    <div class="col-md-10">
                        @Html.DropDownList("IdUtente", null, htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.IdUtente, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-md-2">Ricetta</label>
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.NumeroRicetta, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.NumeroRicetta, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" form="FormVendite" value="Conferma" class="btn btn-default" />
                    </div>
                </div>
            </div>
        }
    </div>
</div>