@model IEnumerable<ClinicaVeterinaria.Models.Vendite>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Crea Nuova Vendita", "Cassa", "Admin", null, new { @class = "nav-link" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Utenti.Nome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DataVendita)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NumeroRicetta)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Utenti.Nome)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DataVendita)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NumeroRicetta)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.IdVendita }) |
            @Html.ActionLink("Details", "Details", new { id=item.IdVendita }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.IdVendita })
        </td>
    </tr>
}

</table>
