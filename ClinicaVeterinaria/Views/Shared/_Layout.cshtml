<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title - Applicazione ASP.NET</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <!-- Font Awesome -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css"
          rel="stylesheet" />
    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700&display=swap"
          rel="stylesheet" />
    <!-- MDB -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/6.4.2/mdb.min.css"
          rel="stylesheet" />
</head>
<body>
    <!--NAVBAR ADMIN INIZIO-->
    @if (User.IsInRole("Admin"))
    {

        <nav id="navPos" class="navbar navbar-expand-lg navbar-light bg-light">
        
        <div class="container">
       
        <a class="navbar-brand me-2" href="/Home/Index">
            <img src="#"
                 height="50"
                 alt="MDB Logo"
                 loading="lazy"
                 style="margin-top: -1px;" />
        </a>

      
        <button class="navbar-toggler"
                type="button"
                data-mdb-toggle="collapse"
                data-mdb-target="#navbarButtonsExample"
                aria-controls="navbarButtonsExample"
                aria-expanded="false"
                aria-label="Toggle navigation">
            <i class="fas fa-bars"></i>
        </button>

        
        <div class="collapse navbar-collapse" id="navbarButtonsExample">
    
        <ul class="navbar-nav me-auto mb-2 mb-lg-0">
            <li class="nav-item">
                <a class="nav-link" href="/AnimaliRicoverati/Create">Anagrafa Animale</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="/AnimaliRicoverati/Index">Lista Animali</a>
            </li>
        </ul>
       

        <div class="d-flex align-items-center">
                        <p class="mt-3 me-1">Benvenuto <strong>@User.Identity.Name</strong></p>
                        <img src="~/Content/Immagini/user-icon.png"
                             class="rounded-circle me-2"
                             height="25"
                             alt="Black and White Portrait of a Man"
                             loading="lazy" />
                        <a class="btn btn-danger me-3" href="/Login/Logout">Logout</a>
                    </div>
                </div>
            </div>
        </nav>
        <!--NAVBAR ADMIN FINE-->

        <!--NAVBAR USER INIZIO-->
    } @if (User.IsInRole("User"))
    {

        <nav id="navPos" class="navbar navbar-expand-lg navbar-light bg-light">
         
        <div class="container">
         
        <a class="navbar-brand me-2" href="/Home/Index">
            <img src="#"
                 height="50"
                 alt="MDB Logo"
                 loading="lazy"
                 style="margin-top: -1px;" />
        </a>

       
        <button class="navbar-toggler"
                type="button"
                data-mdb-toggle="collapse"
                data-mdb-target="#navbarButtonsExample"
                aria-controls="navbarButtonsExample"
                aria-expanded="false"
                aria-label="Toggle navigation">
            <i class="fas fa-bars"></i>
        </button>

        
        <div class="collapse navbar-collapse" id="navbarButtonsExample">
        
        <ul class="navbar-nav me-auto mb-2 mb-lg-0">
            <li class="nav-item">
                <a class="nav-link" href="/AnimaliRicoverati/Create">Cerca Animale</a>
            </li>
        </ul>
      

        <div class="d-flex align-items-center">
                        <p class="mt-3 me-1">Benvenuto <strong>@User.Identity.Name</strong></p>
                        <img src="~/Content/Immagini/user-icon.png"
                             class="rounded-circle me-2"
                             height="25"
                             alt="Black and White Portrait of a Man"
                             loading="lazy" />

                        <a class="btn btn-danger me-3" href="/Login/Logout">Logout</a>
                    </div>
                </div>

            </div>

        </nav>
        <!--NAVBAR USER FINE-->

        <!--NAVBAR SENZA ALCUN TIPO DI ACCESSO INIZIO-->
    }@if (!User.IsInRole("User") && !User.IsInRole("Admin"))
            {
                //Navbar
               <nav id="navPos" class="navbar navbar-expand-lg navbar-light bg-light">
        
        <div class="container">
        
        <a class="navbar-brand me-2" href="/Home/Index">
            <img src="#"
                 height="50"
                 alt="MDB Logo"
                 loading="lazy"
                 style="margin-top: -1px;" />
        </a>

         
        <button class="navbar-toggler"
                type="button"
                data-mdb-toggle="collapse"
                data-mdb-target="#navbarButtonsExample"
                aria-controls="navbarButtonsExample"
                aria-expanded="false"
                aria-label="Toggle navigation">
            <i class="fas fa-bars"></i>
        </button>

        
        <div class="collapse navbar-collapse" id="navbarButtonsExample">
         Left links
        <ul class="navbar-nav me-auto mb-2 mb-lg-0">
            <li class="nav-item">
                <a class="nav-link" href="/Home/Index">Home</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="/AnimaliRicoverati/Index">Cerca Animale</a>
            </li>
        </ul>
        

        <div class="d-flex align-items-center">

                <a class="btn btn-link me-3" href="/Login/Login">Login</a>
                <a class="btn btn-success me-3" href="/Register/Register">Registrati</a>
            </div>
        </div>
         
        </div>
        
        </nav>
        //<!-- Navbar -->
        //<!--NAVBAR SENZA ALCUN TIPO DI ACCESSO FINE-->
    }

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Applicazione ASP.NET</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
    <!-- MDB -->
    <script type="text/javascript"
            src="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/6.4.2/mdb.min.js"></script>
</body>
</html>

<script type="text/javascript"
        src="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/6.4.2/mdb.min.js"></script>
