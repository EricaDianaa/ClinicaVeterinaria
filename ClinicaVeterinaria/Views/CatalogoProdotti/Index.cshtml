@model IEnumerable<ClinicaVeterinaria.Models.Prodotti>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Catalogo Prodotti";
}

<div class="container mt-5">
    <div class="row">
        @foreach (var prodotto in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card" style="height:40vh">
                    <div class="card-body">
                        <h2 class="card-title">@prodotto.Nome</h2>
                        <p class="card-text ">
                            <strong>Tipo:</strong> @prodotto.Tipo<br />
                            <hr />
                            <strong>Ditta:</strong> @prodotto.Ditte.Nome<br />
                            <hr />
                            <strong>Quantità:</strong> @prodotto.Quantita
                            <hr />
                            <strong>Descrizione:</strong> @prodotto.Descrizione<br />
                            

                        </p>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
