@model ClinicaVeterinaria.Models.Utenti
@{
    ViewBag.Title = "Register";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <section class="h-100">
        <div class="container py-5 h-100">
            <div class="row d-flex justify-content-center align-items-center h-100">
                <div class="col">
                    <div class="card card-registration my-4">
                        <div class="row g-0">
                            <div class="col-xl-6 d-none d-xl-block">
                                <img src="~/Content/Immagini/ImmagineRegister.png"
                                     alt="Sample photo" class="w-100"
                                     style="border-top-left-radius: .25rem; border-bottom-left-radius: .25rem;" />
                            </div>
                            <div class="col-xl-6">
                                <div class="card-body p-md-5 text-black">
                                    <h3 class="mb-5 text-uppercase text-center"><i class="fa-solid fa-paw"></i> Diventa dei nostri - Registrati <i class="fa-solid fa-paw"></i></h3>

                                    <div class="row">
                                        <div class="col-md-6 mb-4">
                                            <div class="form-outline">
                                                @Html.EditorFor(model => model.Cognome, new { htmlAttributes = new { @class = "form-control", @id = "Nome" } })
                                                @Html.ValidationMessageFor(model => model.Cognome, "", new { @class = "text-danger" })
                                                <label class="form-label pt-0" for="Cognome">Cognome</label>
                                            </div>
                                        </div>
                                        <div class="col-md-6 mb-4">
                                            <div class="form-outline">
                                                @Html.EditorFor(model => model.Nome, new { htmlAttributes = new { @class = "form-control", @id = "Nome" } })
                                                @Html.ValidationMessageFor(model => model.Nome, "", new { @class = "text-danger" })
                                                <label class="form-label pt-0" for="Nome">Nome</label>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="row">
                                        <div class="col-md-12 mb-4">
                                            <div class="form-outline">
                                                @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control", @id = "Email" } })
                                                @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                                                <label class="form-label pt-0" for="Email">Email</label>
                                            </div>
                                        </div>
                                        <div class="col-md-12 mb-4">
                                            <div class="form-outline">
                                                @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control", @id = "CodiceFiscale" } })
                                                @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                                                <label class="form-label pt-0" for="Password">Password</label>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-12 mb-4">
                                            <div class="form-outline">
                                                @Html.EditorFor(model => model.CodiceFiscale, new { htmlAttributes = new { @class = "form-control", @id = "CodiceFiscale" } })
                                                @Html.ValidationMessageFor(model => model.CodiceFiscale, "", new { @class = "text-danger" })
                                                <label class="form-label pt-0" for="CodiceFiscale">Codice Fiscale</label>
                                            </div>
                                        </div>
                                        <div class="col-md-12 mb-4">
                                            <div class="form-outline">
                                                @Html.EditorFor(model => model.Telefono, new { htmlAttributes = new { @class = "form-control", @id = "Telefono" } })
                                                @Html.ValidationMessageFor(model => model.Telefono, "", new { @class = "text-danger" })
                                                <label class="form-label pt-0" for="Telefono">Telefono</label>
                                            </div>
                                        </div>
                                    </div>

                                    @*<div class="form-outline mb-4">
                                            <input type="text" id="form3Example8" class="form-control form-control-lg" />
                                            <label class="form-label" for="form3Example8">Address</label>
                                        </div>*@
                                    <div class="d-flex justify-content-end pt-3">
                                        <a class="btn btn-link me-2" href="/Home/Index">Back</a>
                                        <input type="submit" value="Registrati" class="btn btn-primary" />
                                    </div>

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
}