
@{
    ViewBag.Title = "Index";
}


<div id="demo" class="carousel slide" data-ride="carousel">

    <!-- Indicators (pallini sotto il carosello) -->
    <ul class="carousel-indicators">
        <li data-target="#demo" data-slide-to="0" class="active"></li>
        <li data-target="#demo" data-slide-to="1"></li>
        <li data-target="#demo" data-slide-to="2"></li>
    </ul>

    <!-- Slides del carosello -->
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img src="~/Content/ImgsLayout/esigenze.jpg" alt="foto cani"  height="500">
            <div class="carousel-caption">
                <h3>Titolo 1</h3>
                <p>Descrizione 1</p>
                
            </div>
        </div>
        <div class="carousel-item">
            <img src="~/Content/ImgsLayout/famiglia.jpg" alt="foto famiglia"  height="500">
            <div class="carousel-caption">
                <h3>Titolo 2</h3>
                <p>Descrizione 2</p>
                
            </div>
        </div>
        <div class="carousel-item">
            <img src="~/Content/ImgsLayout/riparo.jpg" alt="foto gatto"  height="500">
            <div class="carousel-caption">
                <h3>Titolo 3</h3>
                <p>Descrizione 3</p>
                
            </div>
        </div>
    </div>

    <!-- Controlli (frecce a sinistra e a destra) -->
    <a class="carousel-control-prev" href="#demo" data-slide="prev">
        <span class="carousel-control-prev-icon"></span>
    </a>
    <a class="carousel-control-next" href="#demo" data-slide="next">
        <span class="carousel-control-next-icon"></span>
    </a>
</div>


<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>