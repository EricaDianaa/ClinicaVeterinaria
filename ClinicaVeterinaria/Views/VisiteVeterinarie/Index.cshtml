@model IEnumerable<ClinicaVeterinaria.Models.VisiteVeterinarie>

@{
    ViewBag.Title = "Index";
}

<h2>Lista Visite veterinarie</h2>

<p>
    @Html.ActionLink("Nuova visita", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.AnimaliRicoverati.Nome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Data)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ObiettivoEsame)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Descrizione)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.AnimaliRicoverati.Nome)
        </td>
        <td>
            @{
                var dataFormattata = item.Data.ToShortDateString();
            }
            @Html.DisplayFor(modelItem => dataFormattata)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ObiettivoEsame)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Descrizione)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.idVisite }) |
            @Html.ActionLink("Details", "Details", new { id=item.idVisite }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.idVisite })
        </td>
    </tr>
}

</table>
