@model IEnumerable<ClinicaVeterinaria.Models.ProdottiUsi>

@{
    ViewBag.Title = "Index";
}

<h2>Lista Usi dei prodotti</h2>

<p>
    @Html.ActionLink("Crea nuovo uso", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Prodotti.Tipo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.UsiDisponibili.Descrizione)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Prodotti.Tipo)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.UsiDisponibili.Descrizione)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.IdProdottiUsi }) |
            @Html.ActionLink("Details", "Details", new { id=item.IdProdottiUsi }) |
